{
    "name": "BENEDMO fact-check finder",
    "version": "0.0.1",
    "description": "Find Flemish/Dutch fact-checks from any web page or highlighted text",
    "homepage_url": "https://github.com/benedmo/fact-check-finder",
    "manifest_version": 3,
    "minimum_chrome_version": "100",
    "browser_specific_settings": {
        "gecko": {
            "id": "todo@github.io",
            "strict_min_version": "100.0"
        }
    },
    "icons": {
        "128": "img/icon.png"
    },
    "permissions": [
        "storage",
        "contextMenus"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "content_scripts": [{
        "matches": ["https://github.com/fregante/browser-extension-template/*"],
        "js": ["js/content.js"],
        "css": ["css/content.css"],
        "run_at": "document_end"
    }],
    "options_ui": {
        "browser_style": true,
        "page": "html/options.html"
    },
    "background": {
        "service_worker": "js/background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "html/popup.html"
    }
}